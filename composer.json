{
    "name": "wecodein/http-middleware",
    "description": "Middleware for PHP built on top of PSR-7, PSR-15 and PSR-17",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "wecodein",
        "http-middleware",
        "psr-7",
        "psr-15",
        "psr-17"
    ],
    "authors": [
        {
            "name": "Dusan Vejin",
            "email": "dutekvejin@gmail.com",
            "homepage": "https://github.com/dutekvejin"
        }
    ],
    "require": {
        "php": "^7.0",
        "http-interop/http-factory": "^0.3.0",
        "http-interop/http-server-handler": "^1.0",
        "http-interop/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.7",
        "http-interop/http-factory-diactoros": "^0.3.0",
        "http-interop/http-factory-guzzle": "^0.3.1",
        "phpunit/phpunit": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "WeCodeIn\\Http\\Server\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WeCodeIn\\Http\\Server\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run"
    },
    "provide": {
        "psr/http-middleware": "dev-develop",
        "psr/http-middleware-implementation": "^1.0"
    },
    "suggest": {
        "http-interop/http-factory-guzzle": "",
        "http-interop/http-factory-diactoros": ""
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
